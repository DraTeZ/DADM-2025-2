<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cobertura Móvil en Colombia"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etDepartamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Departamento (Ej. ANTIOQUIA)"
        android:inputType="textCapWords"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etMunicipio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Municipio (Opcional)"
        android:inputType="textCapWords"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/etOperador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Operador (Opcional, ej. TIGO)"
        android:inputType="textCapWords"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tecnología (Opcional)"
        android:layout_marginTop="8dp"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupTecnologia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTodas"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Todas"
            android:checked="true"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip2g"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2G"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip3g"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3G"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip4g"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4G"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chipLte"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LTE"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip5g"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5G"/>
    </com.google.android.material.chip.ChipGroup>
    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvEstadoResultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No se encontraron resultados."
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewResultados"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/cobertura"/>

</LinearLayout>